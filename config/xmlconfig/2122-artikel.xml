		<field>
			<name>parent_fk</name>
			<type>genericelement</type>
			<element>artikel</element>
			<required>no</required>
			<multiple>no</multiple>
		</field>
		<!-- ################################################################### -->
		<field>
			<name>titel</name>
			<type>textshort</type>
			<required>yes</required>
		</field>
		<!-- ################################################################### -->
		<field>
			<name>untertitel</name>
			<type>textshort</type>
			<required>yes</required>
		</field>
		<!-- ################################################################### -->
		<field>
			<name>teaserbild</name>
			<type>image</type>
