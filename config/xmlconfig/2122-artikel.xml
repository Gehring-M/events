		</field>
		<!-- ################################################################### -->
		<field>
			<name>anriss</name>
			<type>richtext</type>
			<required>no</required>
		</field>
		<!-- ################################################################### -->
		<field>
			<name>inhalt</name>
			<type>richtext</type>
			<required>no</required>
		</field>
		<!-- ################################################################### -->
		<field>
			<name>von</name>
			<type>date</type>
			<required>yes</required>
		</field>
		<!-- ################################################################### -->
		<field>
			<name>bis</name>
			<type>date</type>
		</field>

		<!-- ################################################################### -->
		<field>
			<name>link</name>
			<type>textshort</type>
			<required>no</required>
		</field>
		<!-- ################################################################### -->
	</editfields>
	<uploads>
		<upload>
			<name>uploads</name>
			<type>medienarchiveintrag</type>
			<category>ma-droploader</category>
			<multiple>no</multiple>
		</upload>
		<upload>
			<name>bilder</name>
			<type>medienarchiveintrag</type>
			<category>ma-droploader</category>
			<multiple>no</multiple>
		</upload>
